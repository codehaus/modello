<?xml version="1.0"?>

<model xsd.namespace="http://modello.codehaus.org/FEATURES" xsd.target-namespace="http://modello.codehaus.org/FEATURES">
  <id>features</id>
  <name>ModelloFeaturesTest</name>
  <description>A model to test Modello features with every plugin and point to plugin specific features.</description>

  <defaults>
    <default>
      <key>package</key>
      <value>org.codehaus.modello.test.features</value>
    </default>
  </defaults>

  <classes>

    <class rootElement="true">
      <name>Features</name>
      <version>1.0.0+</version>
      <fields>
        <field>
          <name>comment</name>
          <version>1.0.0+</version>
          <type>String</type>
          <comment>Test of a comment.</comment>
        </field>
        <field>
          <name>description</name>
          <version>1.0.0+</version>
          <description>Test of a description.</description>
          <type>String</type>
        </field>
        <field>
          <name>required</name>
          <version>1.0.0+</version>
          <required>true</required>
          <description>Test of a required field.</description>
          <type>String</type>
        </field>
        <field>
          <name>simpleTypes</name>
          <version>1.0.0+</version>
          <association>
            <type>SimpleTypes</type>
          </association>
        </field>
        <field>
          <name>javaFeatures</name>
          <version>1.0.0+</version>
          <association>
            <type>JavaFeatures</type>
          </association>
        </field>
        <field>
          <name>xmlFeatures</name>
          <version>1.0.0+</version>
          <association>
            <type>XmlFeatures</type>
          </association>
        </field>
        <field>
          <name>jpoxFeatures</name>
          <version>1.0.0+</version>
          <association>
            <type>JPoxFeatures</type>
          </association>
        </field>
        <field>
          <name>storeFeatures</name>
          <version>1.0.0+</version>
          <association>
            <type>StoreFeatures</type>
          </association>
        </field>
      </fields>
      <codeSegments>
        <codeSegment>
          <version>1.0.0+</version>
          <code>
            /* this text goes directly into generated code */
          </code>
        </codeSegment>
      </codeSegments>
    </class>

    <class>
      <name>SimpleTypes</name>
      <version>1.0.0+</version>
      <description><![CDATA[
        <code>&lt;field&gt;&lt;type&gt;<i>chose a type</i>&lt;/type&gt;&lt;field&gt;</code>:
        Test of every simple types supported.]]>
      </description>
      <fields>
        <field>
          <name>primitiveBoolean</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>boolean</code> primitive.]]></description>
          <type>boolean</type>
          <defaultValue>true</defaultValue>
        </field>
        <field>
          <name>primitiveInt</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>int</code> primitive.]]></description>
          <type>int</type>
          <defaultValue>12</defaultValue>
        </field>
        <field>
          <name>primitiveLong</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>long</code> primitive.]]></description>
          <type>long</type>
          <defaultValue>12l</defaultValue>
        </field>
        <field>
          <name>primitiveFloat</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>float</code> primitive.]]></description>
          <type>float</type>
          <defaultValue>12.12f</defaultValue>
        </field>
        <field>
          <name>primitiveDouble</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>double</code> primitive.]]></description>
          <type>double</type>
          <defaultValue>12.12d</defaultValue>
        </field>
        <field>
          <name>objectBoolean</name>
          <version>2.0.0+</version>
          <description><![CDATA[<code>Boolean</code> class.]]></description>
          <type>Boolean</type>
          <defaultValue>Boolean.FALSE</defaultValue>
        </field>
        <!--field>
          <name>objectInteger</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>Integer</code> class.]]></description>
          <type>Integer</type>
          <defaultValue>new Integer( 12 )</defaultValue>
        </field>
        <field>
          <name>objectLong</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>Long</code> class.]]></description>
          <type>Long</type>
          <defaultValue>new Long( 12 )</defaultValue>
        </field>
        <field>
          <name>objectFloat</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>Float</code> class.]]></description>
          <type>Float</type>
          <defaultValue>new Float( 12.12 )</defaultValue>
        </field>
        <field>
          <name>objectDouble</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>Double</code> class.]]></description>
          <type>Double</type>
          <defaultValue>new Double( 12.12 )</defaultValue>
        </field-->
        <field>
          <name>objectString</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>String</code> class.]]></description>
          <type>String</type>
          <defaultValue>default value</defaultValue>
        </field>
        <field>
          <name>objectDate</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>Date</code> class.]]></description>
          <type>Date</type>
          <defaultValue>new Date()</defaultValue>
        </field>
        <!-- TODO: char, short, byte -->
      </fields>
    </class>

    <class>
      <name>JavaFeatures</name>
      <version>1.0.0+</version>
      <description><![CDATA[Test of java generation specific parameters: see
        <a href="http://fisheye.codehaus.org/browse/modello/trunk/modello-core/src/main/java/org/codehaus/modello/plugin/java/JavaMetadataPlugin.java?r=trunk">JavaMetadataPlugin</a>
        class.]]>
      </description>
      <fields>
        <!--field>
          <name>javaEnabled</name>
          <version>1.0.0+</version>
          <association java.generate-add="false" java.generate-remove="false">
            <type>JavaEnabledFeature</type>
            <multiplicity>*</multiplicity>
          </association>
        </field-->
        <field>
          <name>javaAbstract</name>
          <version>2.0.0+</version>
          <association>
            <type>JavaAbstractFeature</type>
          </association>
        </field>
        <!--
         - class features: java.enabled="false" 
         - association features: java.generate-add="false" java.generate-remove="false", java.generate-break="false" java.generate-create="false", java.use-interface="interfaceName", java.init="lazy|constructor|field"
         - field features: java.adder="false", java.getter="false", java.setter="false" -->
      </fields>
    </class>

    <class java.enabled="false">
      <name>JavaEnabledFeature</name>
      <version>2.0.0+</version>
      <description><![CDATA[<code>&lt;class java.enabled="false"&gt;</code>: a class disabled for java generation.]]></description>
    </class>

    <class java.abstract="true">
      <name>JavaAbstractFeature</name>
      <version>2.0.0+</version>
      <description><![CDATA[<code>&lt;class java.abstract="true"&gt;</code>: a class generated in java as abstract.]]></description>
    </class>

    <class xsd.compositor="sequence">
      <name>XmlFeatures</name>
      <version>1.0.0+</version>
      <description><![CDATA[Test of XML specific parameters: see
        <a href="http://fisheye.codehaus.org/browse/modello/trunk/modello-plugins/modello-plugin-xml/src/main/java/org/codehaus/modello/plugins/xml/XmlMetadataPlugin.java?r=trunk">XmlMetadataPlugin</a>
        class.]]>
      </description>
      <fields>
        <field xml.attribute="true">
          <name>attribute</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.attribute="true"&gt;</code>: a field as XML attribute instead of element.]]></description>
          <type>String</type>
        </field>
        <field xml.tagName="tagName">
          <name>fieldName</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.tagName="<i>tagName</i>"&gt;</code>: a field with an XML name different from the field name.]]></description>
          <type>String</type>
        </field>
        <field xml.attribute="true" xml.tagName="tagNameAttribute">
          <name>fieldNameAttribute</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.attribute="true" xml.tagName="<i>tagName</i>"&gt;</code>]]></description>
          <type>String</type>
        </field>
        <field xml.format="yyyy-MM-dd HH:mm">
          <name>dateXmlFormat</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.format="<i>SimpleDateFormat specification</i>"&gt;</code>: a Date field with a specified format.]]></description>
          <type>Date</type>
        </field>
        <field xml.listStyle="flat">
          <name>xmlListStyleFlat</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.listStyle="flat"&gt;</code>: a "flat" list, ie without enclosing tag.]]></description>
          <association>
            <type>AssociationDemo</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field xml.associationTagName="association">
          <name>xmlAssociationTagName</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.associationTagName="<i>association</i>"&gt;</code>: a list with an XML name different from the field name.]]></description>
          <association>
            <type>AssociationDemo</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>xsdFeatures</name>
          <version>1.0.0+</version>
          <association>
            <type>XsdFeatures</type>
          </association>
        </field>
      </fields>
    </class>

    <class xsd.compositor="sequence">
      <name>XsdFeatures</name>
      <version>1.0.0+</version>
      <description><![CDATA[Test of XSD specific parameters: see
        <a href="http://fisheye.codehaus.org/browse/modello/trunk/modello-plugins/modello-plugin-xsd/src/main/java/org/codehaus/modello/plugin/xsd/metadata/XsdMetadataPlugin.java?r=trunk">XsdMetadataPlugin</a>
        class.]]>
      </description>
      <fields>
        <field xml.attribute="true">
          <name>attribute</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
      </fields>
    </class>

    <class>
      <name>JPoxFeatures</name>
      <version>1.0.0+</version>
      <description><![CDATA[Test of JPox specific parameters: see
        <a href="http://fisheye.codehaus.org/browse/modello/trunk/modello-plugins/modello-plugin-jpox/src/main/java/org/codehaus/modello/plugin/jpox/metadata/JPoxMetadataPlugin.java?r=trunk">JPoxMetadataPlugin</a>
        class.]]>
      </description>
      <fields>
        <field jpox.column="column">
          <name>jpoxColumn</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field jpox.column="<i>column name</i>"&gt;</code>.]]></description>
          <type>String</type>
        </field>
      </fields>
    </class>

    <class>
      <name>StoreFeatures</name>
      <version>1.0.0+</version>
      <description><![CDATA[Test of Store specific parameters: see
        <a href="http://fisheye.codehaus.org/browse/modello/trunk/modello-plugins/modello-plugin-store/src/main/java/org/codehaus/modello/plugin/store/metadata/StoreMetadataPlugin.java?r=trunk">StoreMetadataPlugin</a>
        class.]]>
      </description>
      <fields>
        <field stash.storable="false">
          <name>stashStorable</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field stash.storable="false"&gt;</code>.]]></description>
          <type>String</type>
        </field>
      </fields>
    </class>

    <class>
      <name>AssociationDemo</name>
      <version>1.0.0+</version>
      <description>A simple class for association demo.</description>
      <fields>
        <field>
          <name>id</name>
          <version>1.0.0+</version>
          <type>String</type>
        </field>
      </fields>
    </class>

  </classes>

</model>
