    private static String makeFields( String[] fields )
    {
        if ( fields.length == 1 )
        {
            return "";
        }

        StringBuffer str = new StringBuffer( fields[ 0 ] );

        for( int i = 1; i < fields.length - 1; i++ )
        {
            str.append( ", " );
            str.append( fields[ i ] );
        }

        return str.toString();
    }

    private static String makeMarkers( int count )
    {
        if ( count == 0 )
        {
            return "";
        }

        String markers = "?";

        for ( int i = 1; i < count; i++ )
        {
            markers += ", ?";
        }

        return markers;
    }

