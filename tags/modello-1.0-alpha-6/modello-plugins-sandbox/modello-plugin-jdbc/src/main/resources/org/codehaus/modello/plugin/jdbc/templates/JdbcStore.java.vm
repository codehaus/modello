    private void closeConnection( Connection con, Statement stmt, ResultSet rs )
    {
        if ( rs != null )
        {
            try
            {
                rs.close();
            }
            catch( SQLException ex )
            {
                ex.printStackTrace();
            }
        }

        if ( stmt != null )
        {
            try
            {
                stmt.close();
            }
            catch( SQLException ex )
            {
                ex.printStackTrace();
            }
        }

        try
        {
            con.close();
        }
        catch( SQLException ex )
        {
            ex.printStackTrace();
        }
    }
