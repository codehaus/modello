        </field>
        <field xml.tagName="tagName">
          <name>fieldName</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.tagName="<i>tagName</i>"&gt;</code>: a field with an XML name different from the field name.]]></description>
          <type>String</type>
        </field>
        <field xml.attribute="true" xml.tagName="tagNameAttribute">
          <name>fieldNameAttribute</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.attribute="true" xml.tagName="<i>tagName</i>"&gt;</code>]]></description>
          <type>String</type>
        </field>
        <field xml.format="yyyy-MM-dd'T'HH:mm:ss.SSS">
          <name>dateXmlFormat</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.format="<i>SimpleDateFormat specification</i>"&gt;</code>: a Date field with a specified format.]]></description>
          <type>Date</type>
        </field>
        <field xml.listStyle="flat">
          <name>xmlListStyleFlats</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.listStyle="flat"&gt;</code>: a "flat" list, ie without enclosing tag.]]></description>
          <association>
            <type>Reference</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field xml.associationTagName="associations">
          <name>xmlAssociationTagNames</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;field xml.associationTagName="<i>associations</i>"&gt;</code>: a list with an XML name different from the field name.]]></description>
          <association>
            <type>Reference</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>propertiesExplode</name>
          <version>2.0.0+</version><!-- TODO: not supported by StAX plugin -->
          <description><![CDATA[<code>&lt;type&gt;Properties&lt;/type&gt;&lt;association xml.mapStyle="explode"&gt;</code>.]]></description>
          <type>Properties</type>
          <association xml.mapStyle="explode">
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>propertiesInline</name>
          <version>1.0.0+</version>
          <description><![CDATA[<code>&lt;type&gt;Properties&lt;/type&gt;&lt;association xml.mapStyle="inline"&gt;</code> (default).]]></description>
          <type>Properties</type>
          <association xml.mapStyle="inline">
            <type>String</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>xsdFeatures</name>
          <version>1.0.0+</version>
          <association>
            <type>XsdFeatures</type>
          </association>
        </field>
      </fields>
    </class>

