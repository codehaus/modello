<?xml version="1.0"?>

<!DOCTYPE jdo PUBLIC
  "-//Sun Microsystems, Inc.//DTD Java Data Objects Metadata 1.0//EN"
  "http://java.sun.com/dtd/jdo_1_0.dtd">

<jdo>
  <package name="$package">
#foreach ( $class in $model.allClasses )
#if ( $class.getMetadata( $storeMetadataId ).isStorable() )
  <class name="$class.name" identity-type="datastore">
#foreach ( $field in $class.allFields )
    <field name="$field.name" persistence-modifier="persistent"/>
#end
  </class>
#end
#end
  </package>
</jdo>
